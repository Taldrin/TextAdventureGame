@model BotAdminSite.Models.ViewModelReports
@{
    ViewData["Title"] = "Details";
}

<h1>Reports</h1>

<h3>Last 24 hours</h3>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-group-flush">
                    <li class="list-group-item">
                        Actions performed: @Model.ActionsCount
                    </li>
                    <li class="list-group-item">
                        Players played today: @Model.PlayersCount
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <h4>Actions by game</h4>
                <ul class="list-group-flush">
                    @foreach (var item in Model.ActionsByGame)
                    {
                        <li class="list-group-item">
                            @item.Key: @item.Value
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<h3>All Time</h3>
<h5>Game Saves: @Model.TotalGameSaves</h5>
<h5>Players: @Model.TotalPlayers</h5>
<h5>Actions: @Model.TotalActions</h5>
