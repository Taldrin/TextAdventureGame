@model InterfurCreations.AdminSite.Models.ViewModelGameDetails

<h1>Game @Model.GameName</h1>

<div class="card">
    <div class="card-body" style="margin:0; padding:0">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-group">
                    <li class="list-group-item">
                        Word Count: <span style="font-weight:bold">@Model.WordCount</span>
                    </li>
                    <li class="list-group-item">
                        Option Count: <span style="font-weight:bold">@Model.OptionCount</span>
                    </li>
                    <li class="list-group-item">
                        Option Count: <span style="font-weight:bold">@Model.OptionCount</span>
                    </li>
                    <li class="list-group-item">
                        State Count:<span style="font-weight:bold">@Model.StateCount </span>
                    </li>
                    <li class="list-group-item">
                        Description: <span style="font-weight:bold">@Model.Description </span>
                    </li>
                    <li class="list-group-item">
                        Category: <span style="font-weight:bold">@Model.Category </span>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Test</h4>
                    </div>
                    <div class="card-body">
                        <form class="form" asp-action="Test" role="form">
                            <div class="form-row">
                                <div class="col">
                                    <label>Minutes to run for</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" asp-for="minutesToRunFor" />
                                        <div class="input-group-append">
                                            <input class="btn btn-primary" type="submit" asp-action="Test" asp-route-gameId="@Model.Id" value="Run Test"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<h4>Achievements</h4>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Players Achieved</th>
            <th>Percent Achieved</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var achiev in Model.Achievements)
        {
            <tr>
                <td>@achiev.Name</td>
                <td>@achiev.Description</td>
                <td>@achiev.NumberOfPlayersAchieved</td>
                <td>@achiev.PercentOfPlayersAchieved %</td>
            </tr>
        }
    </tbody>
</table>