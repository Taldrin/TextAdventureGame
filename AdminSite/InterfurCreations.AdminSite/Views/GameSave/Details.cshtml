@model InterfurCreations.AdminSite.Models.GameSaveModel

@{
    ViewData["Title"] = "Details";
}

<h1>Game Save: @Model.saveId</h1>

<div class="row">
    <div class="col-lg-4">
        <div>
            <ul class="list-group">
                <li class="list-group-item">
                    <span style="font-weight:bolder">Game:</span> @Model.gameName
                </li>
                <li class="list-group-item">
                    <span style="font-weight:bolder">Created:</span> @Model.dateCreated
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Save Data</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach(var data in Model.saveData)
                    {
                    <li class="list-group-item">
                        <span style="font-weight:bolder">@data.name: </span> @data.value
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>