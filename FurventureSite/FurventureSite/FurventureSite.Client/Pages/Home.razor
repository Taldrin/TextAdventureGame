@page "/"
@using FurventureSite.Client.Components
@rendermode InteractiveWebAssembly

@inject IJSRuntime JSRuntime

<div class="row justify-content-md-center">
    <div class="col-lg-4">
        <div class="jumbotron" style="text-align: center; margin-bottom: 0; padding: 3rem 2rem; background-color: #4E5D6C6B">
            <h1 style="font-size: 4rem; color: #68F0F7;font-family:immortal ">Furventure Games</h1>
            <br />
            <h4 style="font-family:immortal; color: white">Furry Themed Text Adventures, playable on Discord, Telegram, or here in your browser!</h4>
        </div>

        <div class="row" style="margin:0">
            <div class="col-lg-12" style="padding:0">
                <NavLink class="nav-link btn-outline-primary" href="play" style="padding:0">
                    <a style="width:100%;" class="btn btn-outline-primary">Play</a>
                </NavLink>
            </div>
        </div>
        <div class="row" style="margin:0">
            <div class="col-lg-12" style="padding:0">
                <a href="https://t.me/furryadventurebot" style="width:100%;" class="btn btn-outline-primary">Telegram Bot</a>
            </div>
        </div>
        <div class="row" style="margin:0">
            <div class="col-lg-12" style="padding:0">
                <a style="width:100%;" href="https://discordapp.com/api/oauth2/authorize?client_id=556607666869501975&permissions=3072&scope=bot" class="btn btn-outline-primary">Invite Bot To Your Discord</a>
            </div>
        </div>
        <div class="row" style="margin:0">
            <div class="col-lg-6" style="padding:0">
                <a style="width: 100%;" href="https://t.me/joinchat/AAAAAFPLgLJbDsQPZLUp1w" class="btn btn-outline-primary">Telegram Announcements</a>
            </div>
            <div class="col-lg-6" style="padding:0">
                <a style="width: 100%;height:100%" href="https://discord.gg/WkpWMep" class="btn btn-outline-primary">Discord Server</a>
            </div>
        </div>
        <div class="row" style="margin:0">
            <div class="col-lg-12" style="padding:0">
                <a style="width:100%;" href="https://stats.furrytextadventures.com" class="btn btn-outline-primary">Status</a>
            </div>
        </div>
        <div class="row" style="margin:0">
            <div class="col-lg-12" style="padding:0">
                <a style="width:100%;" href="https://www.patreon.com/interfurcreations" class="btn btn-outline-primary">Support us on Patreon!</a>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bsky-embed/dist/bsky-embed.es.js" async></script>
        <div >
            <bsky-embed mode="dark" username="furventuregames.bsky.social"
                        limit="5">
            </bsky-embed>
        </div>
    </div>
</div>

@code {
    [Inject]
    private MenuService _menuService { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _menuService.ShowAccountButton(false);

    }

}